<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        style="?attr/borderlessButtonStyle"
        android:layout_marginTop="-11dp"
        android:layout_marginRight="-31dp"
        android:src="@drawable/ic_cancel_black_24dp"
        android:id="@+id/SPTPopUpCloseBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Confirmation"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Of Tiffin"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/Tv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:id="@+id/SPTPopupTiffinNameTv"
        android:text="Tiffin:- "
        android:textColor="#000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:id="@+id/SPTPopupDescriptionTv"
        android:text="Description:- "
        android:textColor="#000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:id="@+id/SPTPopupPriceTv"
        android:text="Price:- "
        android:textColor="#388E3C"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SPTAddressEt"
        android:layout_marginTop="5dp"
        android:hint="Enter Delivery Address"
        android:enabled="false"
        android:background="@drawable/shape_et"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Change Address"
            android:paddingRight="5dp"
            android:id="@+id/SPTPopupChangeAddressBtn"
            style="?attr/borderlessButtonStyle"
            android:textColor="#1523da"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Payment Mode:- COD"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:textSize="17dp"
        android:id="@+id/SPTConfirmOrderBtn"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="@drawable/shape_btn"
        android:layout_marginTop="15dp"/>

</LinearLayout>