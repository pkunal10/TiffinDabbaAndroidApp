<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/TWSOHIv"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:padding="2dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/TWSOHBookForTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Booked For:- "
                android:textSize="11dp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/TWSOHBookDateTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date:- "
                android:textSize="11dp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/TWSOHOderStatusTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status:- "
                android:textSize="11dp"
                android:textColor="#000" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu Of Tiffin"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:id="@+id/Tv"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/TWSOHSabjiTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sabji:- "
                android:textColor="#000" />

            <TextView
                android:id="@+id/TWSOHRotiTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Roti:- "
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/TWSOHDalTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dal:- "
                android:textColor="#000" />

            <TextView
                android:id="@+id/TWSOHChawalTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chawal:- "
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Sweet:- "
                android:textColor="#000"
                android:id="@+id/TWSOHSweetTv"/>

            <TextView
                android:id="@+id/TWSOHOtherTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Other:- "
                android:textColor="#000" />

        </LinearLayout>

        <TextView
            android:id="@+id/TWSOHPriceTv"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price:- "
            android:textColor="#388E3C" />


    </LinearLayout>
</android.support.v7.widget.CardView>